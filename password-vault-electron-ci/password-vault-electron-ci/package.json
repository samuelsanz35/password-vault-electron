{
  "name": "password-vault-electron",
  "version": "1.2.0",
  "description": "Password Vault - Electron desktop app (CI builds the installer)",
  "main": "electron/main.js",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "concurrently -k \"vite\" \"npm:dev:electron\"",
    "dev:electron": "wait-on tcp:5173 && electron .",
    "build:ui": "vite build",
    "build": "npm run build:ui && electron-builder --win --x64",
    "make": "npm run build",
    "preview": "vite preview --strictPort --port 5173"
  },
  "build": {
    "appId": "com.example.passwordvault",
    "productName": "Password Vault",
    "files": [
      "dist/**",
      "electron/**",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "framer-motion": "^11.0.0",
    "keytar": "^7.9.0",
    "lucide-react": "^0.453.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.35",
    "@types/react-dom": "^18.2.14",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.3",
    "vite": "^5.2.0",
    "wait-on": "^7.2.0"
  }
}